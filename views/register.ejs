<%- include('./includes/header') %>
     <%- include('./includes/nav') %>
<main class="page_content">
     <div class="container">
          <section class="register_section section_space_lg">
               <div class="container">
                    <div class="row justify-content-center">
                         <div class="col col-lg-5">
                              <h1 class="register_heading text-center">Create Your Account</h1>
                              <p class="register_heading_description text-center">Already Have An Account ? <a href="/login">Login</a></p>
                              <form action="/register" method="post">

                                   <% if(messages.error) {%>
                                        <div class="alert alert-danger">
                                             <%= messages.error %>
                                        </div>
                                        <% } %>

                                   <div class="register_form signup_login_form">
                                        <div class="form_item"><input type="text" name="name" placeholder="Full Name"></div>
                                        <div class="form_item"><input type="email" name="email" placeholder="Username or Email"></div>
                                        <div class="form_item"><input type="password" name="password" placeholder="**********"></div>
                                        <button type="submit" class="btn btn_dark mb-5"><span><small>Register</small>
                                        <small>Register Now</small></span></button>
                                   </div>
                              </form>
                         </div>
                    </div>
               </div>
          </section>
     </div>
</main>